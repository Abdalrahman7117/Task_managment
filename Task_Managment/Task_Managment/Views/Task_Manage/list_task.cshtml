@{
}
<body>
    <a class="btn btn-danger" href="/Task_Manage/Create">Create</a>
    <table class="table table-hover table-danger">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Deadline</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td>@items.Id</td>
                    <td>@items.Title</td>
                    <td>@items.Description</td>
                    <td>@items.Status</td>
                    <td>@items.Priority</td>
                    <td>@items.Deadline</td>
                    <td>

                        <a asp-action="Update" asp-controller="Task_Manage" asp-route-id="@items.Id" class="btn btn-primary">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Task_Manage" asp-route-id="@items.Id">Delete</a>

                    </td>

                </tr>

            }


        </tbody>

    </table>

</body>
